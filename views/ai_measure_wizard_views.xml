<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_ai_measure_wizard_form" model="ir.ui.view">
    <field name="name">tailor.ai.measure.wizard.form</field>
    <field name="model">tailor.ai.measure.wizard</field>
    <field name="arch" type="xml">
      <form string="AI Measure" create="0" edit="0">
        <sheet>

          <group>
            <group>
              <field name="target_model"/>
              <field name="partner_id" invisible="target_model != 'res.partner'"/>
              <field name="tailor_order_id" invisible="target_model != 'tailor.order'"/>
            </group>

            <group>
              <field name="reference_type"/>
              <field name="height_cm"/>
              <field name="store_images"/>
            </group>
          </group>

          <separator string="Upload Photos" />
          <group>
            <group>
              <field name="front_image" widget="image"/>
              <field name="front_filename" invisible="1"/>
            </group>
            <group>
              <field name="side_image" widget="image"/>
              <field name="side_filename" invisible="1"/>
            </group>
          </group>

          <separator string="AI Result (Preview)" />
          <group>
            <group>
              <field name="confidence" readonly="1"/>
              <field name="length" readonly="1"/>
              <field name="shoulder" readonly="1"/>
              <field name="sleeve_length" readonly="1"/>
            </group>
            <group>
              <field name="chest" readonly="1"/>
              <field name="waist" readonly="1"/>
              <field name="hip" readonly="1"/>
              <field name="neck" readonly="1"/>
              <field name="bottom_width" readonly="1"/>
            </group>
          </group>

          <group>
            <field name="result_json" readonly="1" nolabel="1"/>
          </group>

        </sheet>

        <footer>
          <button string="Compute" name="action_compute" type="object" class="btn-primary"/>
          <button string="Apply" name="action_apply" type="object" class="btn-secondary"/>
          <button string="Close" special="cancel" class="btn-link"/>
        </footer>

      </form>
    </field>
  </record>

</odoo>
