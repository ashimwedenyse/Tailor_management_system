<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- ========================= -->
        <!-- SALES REPORT: LIST VIEW   -->
        <!-- ========================= -->
        <record id="view_tailor_sales_report_list" model="ir.ui.view">
            <field name="name">tailor.sales.report.list</field>
            <field name="model">tailor.sales.report</field>
            <field name="arch" type="xml">
                <list string="Sales Reports" create="false" edit="false" delete="false">
                    <field name="order_date"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="garment_template"/>
                    <field name="status"/>
                    <field name="quantity" sum="Total Qty"/>
                    <field name="orders_count" string="Orders"  sum="Orders"/>
                </list>
            </field>
        </record>

        <!-- ========================= -->
        <!-- SALES REPORT: SEARCH VIEW -->
        <!-- ✅ ULTRA-SAFE (NO FIELDS) -->
        <!-- ========================= -->
        <record id="view_tailor_sales_report_search" model="ir.ui.view">
            <field name="name">tailor.sales.report.search</field>
            <field name="model">tailor.sales.report</field>
            <field name="arch" type="xml">
                <search string="Sales Reports">
                    <!-- empty on purpose -->
                </search>
            </field>
        </record>

        <!-- ========================= -->
        <!-- SALES REPORT: PIVOT VIEW  -->
        <!-- ========================= -->
        <record id="view_tailor_sales_report_pivot" model="ir.ui.view">
            <field name="name">tailor.sales.report.pivot</field>
            <field name="model">tailor.sales.report</field>
            <field name="arch" type="xml">
                <pivot string="Sales Reports">
                    <field name="orders_count" type="measure"/>
                    <field name="quantity" type="measure"/>
                    <field name="order_month" type="row"/>
                    <field name="partner_id" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- ========================= -->
        <!-- SALES REPORT: GRAPH VIEW  -->
        <!-- ========================= -->
        <record id="view_tailor_sales_report_graph" model="ir.ui.view">
            <field name="name">tailor.sales.report.graph</field>
            <field name="model">tailor.sales.report</field>
            <field name="arch" type="xml">
                <graph string="Sales Reports" type="bar">
                    <field name="order_month" type="row"/>
                    <field name="quantity" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="action_tailor_sales_reports" model="ir.actions.act_window">
            <field name="name">Sales Reports</field>
            <field name="res_model">tailor.sales.report</field>
            <field name="view_mode">pivot,graph,list</field>
            <field name="search_view_id" ref="view_tailor_sales_report_search"/>
        </record>


        <!-- ============================== -->
        <!-- PRODUCTION REPORT: LIST VIEW   -->
        <!-- ============================== -->
        <record id="view_tailor_production_report_list" model="ir.ui.view">
            <field name="name">tailor.production.report.list</field>
            <field name="model">tailor.production.report</field>
            <field name="arch" type="xml">
                <list string="Production Reports" create="false" edit="false" delete="false">
                    <field name="order_id"/>
                    <field name="order_date"/>
                    <field name="delivery_date"/>
                    <field name="status"/>
                    <field name="tailor_id"/>
                    <field name="product_id"/>
                    <field name="quantity" sum="Total Qty"/>
                    <field name="orders_count" sum="Orders"/>
                    <field name="duration_days"/>
                </list>
            </field>
        </record>

        <!-- ================================= -->
        <!-- PRODUCTION REPORT: SEARCH VIEW     -->
        <!-- ✅ ULTRA-SAFE (NO FIELDS)          -->
        <!-- ================================= -->
        <record id="view_tailor_production_report_search" model="ir.ui.view">
            <field name="name">tailor.production.report.search</field>
            <field name="model">tailor.production.report</field>
            <field name="arch" type="xml">
                <search string="Production Reports">
                    <!-- empty on purpose -->
                </search>
            </field>
        </record>

        <!-- ============================== -->
        <!-- PRODUCTION REPORT: PIVOT VIEW  -->
        <!-- ============================== -->
        <record id="view_tailor_production_report_pivot" model="ir.ui.view">
            <field name="name">tailor.production.report.pivot</field>
            <field name="model">tailor.production.report</field>
            <field name="arch" type="xml">
                <pivot string="Production Reports">
                    <field name="orders_count" type="measure"/>
                    <field name="quantity" type="measure"/>
                    <field name="duration_days" type="measure"/>
                    <field name="status" type="row"/>
                    <field name="tailor_id" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- ============================== -->
        <!-- PRODUCTION REPORT: GRAPH VIEW  -->
        <!-- ============================== -->
        <record id="view_tailor_production_report_graph" model="ir.ui.view">
            <field name="name">tailor.production.report.graph</field>
            <field name="model">tailor.production.report</field>
            <field name="arch" type="xml">
                <graph string="Production Reports" type="bar">
                    <field name="tailor_id" type="row"/>
                    <field name="orders_count" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="action_tailor_production_reports" model="ir.actions.act_window">
            <field name="name">Production Reports</field>
            <field name="res_model">tailor.production.report</field>
            <field name="view_mode">pivot,graph,list</field>
            <field name="search_view_id" ref="view_tailor_production_report_search"/>
        </record>


        <!-- ========================= -->
        <!-- MENUS (IMPORTANT PARENT!) -->
        <!-- ========================= -->
        <menuitem id="menu_tailor_reports_root"
                  name="Reports"
                  parent="tailor_management.menu_tailor_root"
                  sequence="90"/>

        <menuitem id="menu_tailor_sales_reports"
                  name="Sales Reports"
                  parent="menu_tailor_reports_root"
                  action="action_tailor_sales_reports"
                  sequence="10"/>

        <menuitem id="menu_tailor_production_reports"
                  name="Production Reports"
                  parent="menu_tailor_reports_root"
                  action="action_tailor_production_reports"
                  sequence="20"/>

    </data>
</odoo>
